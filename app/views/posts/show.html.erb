<h1> Users Post Details </h1>
<section>
  <div>
    <h3> <%= @post.title %> by <% @post.author_id %> </h3>
    <span>
      Comments: <%= @post.comments_counter || 0 %>
      Likes: <%= @post.likes_counter || 0 %>
    </span>
    <span>
      <%= @post.text %>
    </span>
    <div>
      <ul>
        <% if @post.recent_comments.length == 0 %>
          <p> No Comments</p>
          <% else %>
          <% @post.recent_comments.each do |comment| %>
            <li><%= comment.author %>: <%= comment.text %></li>
            <% end %>
          <% end %>
      </ul>
    </div>
  </div>
</section>